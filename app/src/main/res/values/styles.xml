<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="loginTextStyle">
        <item name="android:layout_width">120sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00116E</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="Welcome">
        <item name="android:background">#132F75</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">150sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="shoeadd" parent="Welcome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FDFCFC</item>
        <item name="android:ems">5</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
    </style>

    <style name="temp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00163E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CardConstants" parent="temp">
        <item name="android:layout_width">70sp</item>
        <item name="android:layout_height">27sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="cardVariables">
        <item name="android:layout_width">90sp</item>
        <item name="android:layout_height">27sp</item>
        <item name="android:background">#EBEDF1</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
